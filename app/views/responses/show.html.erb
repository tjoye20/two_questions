<div class="row">
  <div class="col s12">
    <div class="row">
      <p>Responses from: <%= @user.display_name.split(' ').first %> </p>
      <%= image_tag @user.image, size: '80x80' %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col s12">
    <% @responses.each do |response| %>
      <div class="row">
        <div class="input-field col s12">
          <%= label_tag "Question:" %><br>
          <p><%= response.question.body %></p>
          <%= text_field_tag :response1, response.body, disabled: true %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col s12">
    <div class="row">
      <div class="center">
        <a class="waves-effect waves-light btn red" >Not interested</a>
        <a class="waves-effect waves-light btn">Interested</a>
      </div>
    </div>
  </div>
</div>