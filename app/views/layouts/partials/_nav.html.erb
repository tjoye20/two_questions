<% if current_user %>
  <nav role="navigation" class="blue">
    <div class="nav-wrapper">
      <a href="/" class="brand-logo">Two Questions</a>
      <a href="#" data-target="mobile-links" class="sidenav-trigger" onclick="$('.sidenav').sidenav('open');return false"><i class="material-icons">menu</i></a>
      <ul class="right hide-on-med-and-down">
        <li>
          <%= link_to 'Interests', interests_path %>
        </li>
        <li>
          <%=link_to 'Sign out', logout_path %>
        </li>
      </ul>
    </div>
  </nav>

  <ul class="sidenav" id="mobile-links">
    <li>
      <div class="user-view">
        <a href="#user">
          <img class="circle" src=<%=current_user.image%>>
        </a>
        <a href="#name">
          <span class="black-text name"><%=current_user.display_name%></span>
        </a>
        <a href="#email">
          <span class="black-text email"><%=current_user.email%></span>
        </a>
      </div>
    </li>
    <li>
      <%= link_to 'Interests', interests_path %>
    </li>
    <li>
      <%=link_to 'Sign out', logout_path%>
    </li>
  </ul>
<% end %>