<div class="row">
  <h4 class="center">Create Profile</h4>
    <div class="col s12">
      <%= form_for @profile, url: { action: 'create' } do |f| %>
        <div class="row">
          <div class="file-field input-field">
            <div class="btn blue">
              <span>File</span>
              <%= f.file_field :file, accept: '.pdf' %>
            </div>
            <div class="file-path-wrapper">
              <input class="file-path validate" type="text" required>
            </div>
          </div> 
        </div>
        <div class="row">
          <div class="input-field col s12">
            <%= f.email_field :email, required: true %>
            <%= f.label :email, "Resume holder's email address" %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <%= f.text_field :roles, required: true, 'data-length': '65' %>
            <%= f.label :roles, "What roles are you applying for?" %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <%= f.text_field :summary, required: true, 'data-length': '100' %>
            <%= f.label :summary, "Why should you be referred?" %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <p>Is this your resume?</p>
             <span>
              <label for="false">
                <input id="false" name="resume[user_resume]" type="radio" value="false" required/>
                <span>No, this is not my resume.</span>
              </label>
            </span>
            <span>
              <label for="true">
                <input id="true" name="resume[user_resume]" type="radio" value="true" required/>
                <span>Yes, this is my resume.</span>
              </label>
            </span>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12 center">
             <button class="btn waves-effect waves-light blue" type="submit" name="action">Upload
              <i class="material-icons right">file_upload</i>
            </button>
          </div>
        </div>
      <% end %>
    </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('input#resume_summary, input#resume_roles').characterCounter();
  });
</script>