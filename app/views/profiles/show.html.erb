<div class="carousel">
  <h4 class="center black-text"><%=@profile.user.display_name.split(' ')[0]%></h4>
  <p class="center black-text"><%= @profile.bio %> </p>
  <% @profile.images.each do |image| %>
    <img src="https://<%=@cloud_front_url %>/<%=image%>" class='carousel-item'/>
  <% end %>
</div>
<p class="center black-text"><%= @profile.location %></p>
<div class="center">
  <a class="waves-effect waves-light btn" onclick="$('.carousel').carousel('next')">
    <i class="material-icons">fast_rewind</i>
  </a>
  <a class="waves-effect waves-light btn" onclick="$('.carousel').carousel('next');">
    <i class="material-icons">fast_forward</i>
  </a>
</div>
<div class="row">
  <div class="col s12">
    <%= form_tag "/profiles/#{@profile.id}/requests", url: { action: 'create' } do |f| %>
        <div class="row">
          <div class="input-field col s12">
            <%= label_tag "Question 1:" %><br>
            <p><%= @questions.first.second %></p>
            <%= text_field_tag :response1, nil, data: { length: 70 }, required: true %>
            <%= hidden_field_tag :question1_id, @questions.first.first%>
          </div>
        </div>
         <div class="row">
          <div class="input-field col s12">
            <%= label_tag "Question 2:" %><br>
            <p><%= @questions.second.second %></p>
            <%= text_field_tag :response2, nil, data: { length: 70 }, required: true %>
            <%= hidden_field_tag :question2_id, @questions.second.first%>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12 center">
            <button class="btn waves-effect waves-light blue" type="submit" name="action">Submit Response
              <i class="material-icons right">send</i>
            </button>
          </div>
        </div>
      <% end %>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function(){
    $('input#response1, input#response2').characterCounter();
    $('.carousel').carousel({ duration: 320 });
  });
</script>