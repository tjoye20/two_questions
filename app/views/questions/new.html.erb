<div class="row">
  <h4 class="center">Create Profile Questions</h4>
    <div class="col s12">
      <%= form_tag "/profiles/#{@profile.uuid}/questions", url: { action: 'create' } do |f| %>
        <div class="row">
          <div class="input-field col s12">
            <%= label_tag "Question 1:" %>
            <%= text_field_tag :question1, nil, data: { length: 50 }, required: true %>
          </div>
        </div>
         <div class="row">
          <div class="input-field col s12">
            <%= label_tag "Question 2:" %>
            <%= text_field_tag :question2, nil, data: { length: 50 }, required: true %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12 center">
            <button class="btn waves-effect waves-light blue" type="submit" name="action">Submit
              <i class="material-icons right">send</i>
            </button>
          </div>
        </div>
      <% end %>
    </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('input#question1, input#question2').characterCounter();
  });
</script>